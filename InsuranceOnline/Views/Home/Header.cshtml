@model List<Insurance.Data.Models.ProductCategory>
@using InsuranceOnline.Common
@using Insurance.Data.Dao
<!-- TOPBAR LOGO SECTION -->
<div class="topbar-logo">
    <div class="container" style="display: flex; align-items:center">
        <a class="navbar-brand" href="/">
            <img src="/Assets/client/images/logo.png" alt="" />
        </a>

        <a class="btn btn-orange-cta" href="/gio-hang" style="margin-left: auto">
            <i class="fa fa-shopping-cart" aria-hidden="true"></i>
        </a>
    </div>
</div>

<!-- NAVBAR SECTION -->
<div class="navbar navbar-main">

    <div class="container container-nav">

        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

        </div>
        

        <nav class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-left">
                <li>
                    <a href="/">TRANG CHỦ</a>
                </li>

                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" role="button" aria-haspopup="true" aria-expanded="false">BẢO HIỂM <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        @foreach (var item in Model)
                        {
                            <li><a href="/bao-hiem/@item.Alias-@item.ID">@item.Name</a></li>
                        }
                    </ul>
                </li>

                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" role="button" aria-haspopup="true" aria-expanded="false">GÓI BẢO HIỂM <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        @foreach (var item in Model)
                        {
                            <li><a href="/goi-bao-hiem/@item.Alias-@item.ID">@item.Name</a></li>
                        }
                    </ul>
                </li>

                <li class="dropdown">
                    @{
                        var session = (UserLogin)Session[Common.CommonConstants.USER_SESSION];
                    }
                    @if (session == null)
                    {
                        <a href="/dang-nhap" class="">ĐĂNG NHẬP</a>
                    }
                    else
                    {
                        var dao = new CustomerUserDao();
                        var user = dao.GetByUsername(session.UserName);

                        <a href="#" data-toggle="dropdown" data-hover="dropdown" role="button" aria-haspopup="true" aria-expanded="false" class="dropdown-toggle">Xin chào, @user.FullName</a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Thông tin cá nhân</a></li>
                            <li><a href="/dang-xuat">Đăng xuất</a></li>
                        </ul>
                    }
                </li>

            </ul>
        </nav>




    </div>
</div>