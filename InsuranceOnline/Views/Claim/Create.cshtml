@model InsuranceOnline.Models.ClaimViewModel
@{
    ViewBag.Title = "Tạo đơn khiếu nại bồi thường";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="section">
    <div class="container">
        <h2>Tạo đơn khiếu nại bồi thường</h2>

        @using (Html.BeginForm("Create", "Claim", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.FullName)
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.FullName, "", new {@class = "text-danger"})
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.CitizenId)
                @Html.TextBoxFor(m => m.CitizenId, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CitizenId)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.SelectedInsuranceId, "Loại bảo hiểm")
                @Html.DropDownListFor(m => m.SelectedInsuranceId, Model.Insurances, "Chọn bảo hiểm đã mua", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.SelectedInsuranceId)
            </div>

            <div class="form-group">
                @Html.Label("Gửi tệp đính kèm chứng minh")
                <input type="file" name="Documents" multiple="multiple" />
                @Html.ValidationMessage("Documents")
            </div>

            <button type="submit" class="btn btn-primary">Gửi</button>
        }
    </div>
</div>



